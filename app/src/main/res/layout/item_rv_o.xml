<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >

    <TextView
        android:id="@+id/tv_item_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:layout_alignBottom="@id/et_item_value"
        android:layout_alignTop="@id/et_item_value"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/et_item_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_item_key"
        android:layout_marginLeft="10dp"
        android:hint="Time"
        android:textSize="15sp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_item_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/et_item_value"
        android:layout_toRightOf="@id/tv_item_key"
        android:layout_marginTop="2dp"
        />
</RelativeLayout>